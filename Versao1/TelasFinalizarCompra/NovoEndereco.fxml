<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="NovoEnderecoController"
            prefHeight="640.0" prefWidth="360.0"
            style="-fx-background-color: #fbe293;">

    <children>
        <Label layoutX="31.0" layoutY="38.0" style="-fx-font-weight: bold;" text="Novo Endereço">
            <font><Font size="20.0"/></font>
        </Label>

        <TextField fx:id="ruaField" layoutX="31.0" layoutY="100.0" prefWidth="300.0" promptText="Rua"/>
        <TextField fx:id="numeroField" layoutX="31.0" layoutY="140.0" prefWidth="300.0" promptText="Número"/>
        <TextField fx:id="bairroField" layoutX="31.0" layoutY="180.0" prefWidth="300.0" promptText="Bairro"/>
        <TextField fx:id="cidadeField" layoutX="31.0" layoutY="220.0" prefWidth="300.0" promptText="Cidade"/>
        <TextField fx:id="estadoField" layoutX="31.0" layoutY="260.0" prefWidth="300.0" promptText="Estado"/>
        <TextField fx:id="cepField" layoutX="31.0" layoutY="300.0" prefWidth="300.0" promptText="CEP"/>

        <Button layoutX="31.0" layoutY="360.0" text="Salvar Endereço"
                onAction="#handleSalvar"
                style="-fx-background-color: #993366; -fx-background-radius: 10;"
                textFill="white"/>
    </children>
</AnchorPane>
